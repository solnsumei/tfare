root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.svelte]
tab_width = 2
indent_size = 2
indent_style = tab
trim_trailing_whitespace = true

[*.js]
tab_width = 2
indent_size = 2
indent_style = tab
trim_trailing_whitespace = true

[*.html]
tab_width = 2
indent_size = 2
indent_style = tab
trim_trailing_whitespace = true
